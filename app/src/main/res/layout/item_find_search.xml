<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_find_location"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_dingwei"/>

        <TextView
            android:id="@+id/tv_find_map_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/hintColor"
            android:text="500 米"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_find_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_find_location"
        android:layout_toRightOf="@id/ll_find_location"
        android:layout_marginLeft="20dp"
        android:text="水果超市"
        android:textColor="@color/nomalText"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_find_map_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/hintColor"
        android:layout_toRightOf="@id/ll_find_location"
        android:layout_alignBottom="@id/ll_find_location"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:text="郑州市河西区体北道才华里小区14号楼前"/>

</RelativeLayout>